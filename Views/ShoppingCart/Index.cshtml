            {
                "name": "Replace_with_your_site_title",
                "url": "Replace_with_your_site_URL"
            }
        </script>*@
    <link rel="stylesheet" href="~/HTML/assets/css/vendor/vendor.min.css" />
    <link rel="stylesheet" href="~/HTML/assets/css/plugins/plugins.min.css" />
    <link rel="stylesheet" href="~/HTML/assets/css/style.min.css">

</head>



@using (Html.BeginForm())
{
    <div class="login-register-area pt-100px pb-100px">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                    <div class="login-register-wrapper">
                        <div class="login-register-tab-list nav">
                            <a class="active" data-bs-toggle="tab" href="#lg1">
                                <h4>結帳</h4>
                            </a>
                           
                        </div>
                        <div class="tab-content">
                            <div id="lg1" class="tab-pane active">
                                <div class="login-form-container">
                                    <div class="login-register-form">
                                        <form action="#" method="post">
                                            @Html.ValidationSummary(false)

                                            @Html.TextBoxFor(m => m.FristName, new { @class = "form-control", @placeholder = "收件人姓" })

                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "收件人名" })

                                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "電話" })

                                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "地址" })

                                            @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", @placeholder = "郵遞區號" })

                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "信箱" })

                                        </form>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary">確認</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    }